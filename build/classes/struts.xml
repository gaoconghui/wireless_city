<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- 主题 -->
	<constant name="struts.ui.theme" value="simple"></constant>
	<!-- 开发模式 -->
	<constant name="struts.devMode" value="true"></constant>

	<package name="default" namespace="/" extends="struts-default">

		<interceptors>
			<interceptor-stack name="CityIntercptor">
				<interceptor-ref name="defaultStack">
					<param name="modelDriven.refreshModelBeforeResult">true</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="CityIntercptor"></default-interceptor-ref>
		
		<global-results>
			<result type="stream" name="ajax-success">
				<param name="contentType">text/html</param>
				<param name="inputName">inputStream</param>
			</result>
		</global-results>
		
		<action name="CatalogueAction_*" class="catalogueAction" method="{1}">
			<result name="toDesignCataloguePage">admin/designcatalogue.jsp</result>
			<result name="toCatalogueManagerPage">admin/cataloguemanager.jsp</result>
			<result name="catalogueManagerAction" type="redirectAction">
				<param name="namespace">/</param>
				<param name="actionName">CatalogueAction_toCatalogueManagerPage</param>
			</result>
		</action>
		
		<action name="TemplateAction_*" class="templateAction" method="{1}">
			<result name="toNewTemplatePage">admin/addtemplate.jsp</result>
			<result name="toTemplateDetailPage">admin/templatedetail.jsp</result>
			<result name="newTemplate">admin/templatedetail.jsp</result>
			<result name="updateTemplate">admin/templatedetail.jsp</result>
			
		</action>

	</package>
</struts>
